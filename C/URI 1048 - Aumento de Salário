#include <stdio.h>
 
int main() {
  float x,sal,y;
  int per;
  char c='%';
  scanf("%f", &x);
  if(x>0.00 && x<=400.00){
    y= (x*15)/100;
    sal=x+y;
    per=15;
  }
  else if(x>400.00 && x<=800.00){
     y= (x*12)/100;
     sal=x+y;
    per=12;
  }
   else if(x>800.00 && x<=1200.00){
     y= (x*10)/100;
     sal=x+y;
    per=10;
   }
   else if(x>1200.00 && x<=2000.00){
     y= (x*7)/100;
     sal=x+y;
    per=7;
   }
    else if (x>2000.00){
     y=(x*4)/100;
     sal=x+y;
    per=4;
    }
    printf("Novo salario: %.2f\n",sal);
    printf("Reajuste ganho: %.2f\n",y);
    printf("Em percentual: %d %c\n",per,c);

  return 0;
}
